@using Microsoft.AspNet.Identity

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" [routerLink]="['/dashboard']">{{title}}</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a [routerLink]="['/dashboard']" routerLinkActive="Active">Home</a></li>
                <li><a [routerLink]="['/blog']">Blog</a></li>
                <li><a [routerLink]="['/gallery']">Gallery</a></li>
                <li><a [routerLink]="['/about']">About</a></li>
            </ul>
            @if (Request.IsAuthenticated)
            {
                <ul class="nav navbar-nav pull-right">
                    <li class="dropdown profile-dropdown">
                        <a>
                            <img src="~/Content/images/no-photo.png" alt="" />
                            <span class="hidden-xs">@User.Identity.GetUserName()</span>
                        </a>
                    </li>
                    <li class="hidden-xxs">
                        <a href="javascript:document.getElementById('logoutForm').submit()">
                            <i class="fa fa-power-off"></i>
                        </a>
                    </li>
                </ul>
            }
            else
            {
                <ul class="pull-right">
                    <li >
                        <a (click)="gotoLogin()"><b>Login</b></a>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>
<router-outlet></router-outlet>
<hr />
<footer>
    <p>&copy; My ASP.NET Application</p>
</footer>